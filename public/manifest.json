{
  "manifest_version": 3,
  "name": "YouTube PowerTools",
  "version": "1.0.1",
  "permissions": ["scripting", "activeTab"],
  "host_permissions": ["https://www.youtube.com/*"],
  "action": {
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/watch*"],
      "js": ["contentScript.js"]
    }
  ]
}
